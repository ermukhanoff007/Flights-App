{
  "compilerOptions": {
    "target": "ESNext",                      // —Å–æ–≤—Ä–µ–º–µ–Ω–Ω—ã–π JS
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,                        // —Ç–æ–ª—å–∫–æ TS
    "skipLibCheck": true,
    "esModuleInterop": true,                 // –¥–ª—è import/export
    "allowSyntheticDefaultImports": true,
    "strict": true,                          // —Å—Ç—Ä–æ–≥–∞—è —Ç–∏–ø–∏–∑–∞—Ü–∏—è
    "forceConsistentCasingInFileNames": true,

    // üöÄ –í–ê–ñ–ù–û: –ø–æ–¥–¥–µ—Ä–∂–∫–∞ JSON
    "resolveJsonModule": true,
    
    // –ø—É—Ç–∏ (—á—Ç–æ–±—ã —Ä–∞–±–æ—Ç–∞–ª "@")
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "shared/*": ["shared/*"]
    },

    "module": "ESNext",
    "moduleResolution": "Node",
    "isolatedModules": true,
    "noEmit": true,                          // –Ω–µ –≥–µ–Ω–µ—Ä–∏—Ä–æ–≤–∞—Ç—å js
    "jsx": "react-jsx"                       // React 17+
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}